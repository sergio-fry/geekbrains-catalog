<h1>Catalog</h1>

<div class="row">
  <div class="col col-6">
  </div>

  <div class="col col-6">
  </div>
</div>

<table class="table">
  <tr>
    <th>Category</th>
    <th>Items</th>
    <th>Sold Items</th>
  </tr>
  <% @categories.map { |c| [c, CategoryStats.new(c)] }.each do |category, stats| %>
    <tr>
      <td><%= link_to category.title, category %></td>
      <td><%= stats.items_count %></td>
      <td><%= stats.items_sold %></td>
    </tr>
  <% end %>
</table>
